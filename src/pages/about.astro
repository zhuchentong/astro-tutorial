---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import '../styles/global.css'

const pageTitle = "关于我"

const list = {
	filename : '11',
	title : '22',
	description : '333',
	link : '444',
}

let enable = false
let skillColor = "red"
const fontWeight = "bold"
const textCase = "uppercase"
const fontSize = "29px"
---

<Layout title="Welcome to Astro.">
	<h1>my astro demo for me about</h1>
	<h1>update something</h1>
	<div>{pageTitle}</div>
	<div>{pageTitle}</div>
	<div class="skill">
		{enable && list.filename}
		{list.title}
		{list.description}
		{list.link}
	</div>
</Layout>

<style define:vars={{skillColor, fontWeight, textCase, fontSize}}>
		h1 {
			color: purple;
			font-size: 4rem;
		}
		.skill {
  	 	color: var(--skillColor);
			font-weight: var(--fontWeight);
			text-transform: var(--textCase);
			font-size: var(--fontSize)
		}

	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc();
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}
	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.instructions strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
